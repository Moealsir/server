#!/bin/bash

# Function to display menu and get user choice
display_menu() {
    echo "Choose an action:"
    echo "1. Create subdomain"
    echo "2. Delete subdomain"
    echo "3. Exit"
    read -p "Enter your choice: " choice
}

# Function to execute create subdomain script
create_subdomain() {
    read -p "Enter domain type (s for subdomain, m for main domain): " domain_type
    read -p "Enter subdomain or domain: " subdomain_or_domain
    read -p "Enter path name: " path_name
    ./create_subdomain.sh "$domain_type" "$subdomain_or_domain" "$path_name"
}

# Function to execute delete subdomain script
delete_subdomain() {
    read -p "Enter subdomain: " subdomain
    ./delete_subdomain.sh "$subdomain"
}

# Main function
main() {
    while true; do
        display_menu

        case $choice in
            1) create_subdomain ;;
            2) delete_subdomain ;;
            3) echo "Exiting..."; exit ;;
            *) echo "Invalid choice. Please enter a number from the menu." ;;
        esac
    done
}

# Run main function
main
